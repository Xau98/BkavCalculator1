<!--Bkav TienNVh : Giao dien doc cua hien thi -->
<com.bkav.calculator2.CalculatorDisplay xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/display"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dip"
    android:orientation="vertical">
<!-- Bkav TienNVH : thanh trạng thái DEG / RAD -->
    <include layout="@layout/toolbar" />

    <com.bkav.calculator2.CalculatorScrollView
        android:id="@+id/formula_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">
<!--Bkav TienNVh: Chặn giật lên khi nhập ký tự -->
<!--        android:gravity="center"-->
        <com.bkav.calculator2.CalculatorFormula
            android:id="@+id/formula"
            style="@style/DisplayTextStyle.Formula"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingTop="0dp"
            android:textColor="@color/display_formula_text_color" />
<!--        Bkav TienNVh : Cho phep nhap phep tinh -->
<!--        android:focusableInTouchMode="true"        -->
    </com.bkav.calculator2.CalculatorScrollView>
    <!-- Bkav TienNVh : Sửa layout_height = match_parent thành wrap_content  -->
    <com.bkav.calculator2.CalculatorResult
        android:id="@+id/result"
        style="@style/DisplayTextStyle.Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:bufferType="spannable"
        android:paddingTop="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:singleLine="true"
        android:textColor="@color/display_result_text_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/result">

        <Button
            android:id="@+id/bt_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="@null"
            android:onClick="onButtonClick"
           android:paddingLeft="22dp"
            android:paddingTop="12dp"
            android:paddingBottom="0dp"
            android:text="@string/title_history"
            android:textSize="17dp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textColor="#66FFFFFF" />

        <ImageView
            android:id="@+id/bt_more"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:contentDescription="more"
            android:onClick="onButtonClick"
            android:paddingLeft="12dp"
            android:paddingTop="26dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="0dp"
            android:paddingRight="28dp"
            android:src="@drawable/icon_more" />
    </RelativeLayout>
</com.bkav.calculator2.CalculatorDisplay>
