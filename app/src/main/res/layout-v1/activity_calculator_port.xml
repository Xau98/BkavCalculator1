<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Bkav Phongngb  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/display_background_color" />

    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

        </android.support.v7.widget.Toolbar>

        <include
            layout="@layout/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.android.calculator2.CalculatorPadViewPager
            android:id="@+id/pad_pager"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:overScrollMode="never">

            <!--Bkav Phongngb-->

            <include layout="@layout/bkav_pad_history"></include>

            <LinearLayout
                android:id="@+id/linear_numberic_operator"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <include layout="@layout/pad_numeric" />

                <LinearLayout
                    style="@style/PadLayoutStyle.Operator"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingEnd="0dp">

                    <include
                        layout="@layout/pad_operator_one_col"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <include layout="@layout/pad_operator_add_button" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/bkav_pad_advanced" />


        </com.android.calculator2.CalculatorPadViewPager>

    </LinearLayout>

</RelativeLayout>
