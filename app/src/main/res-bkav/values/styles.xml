<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bkav TienNVh :   -->
    <style name="BkavDisplayTextStyle" parent="@android:style/Widget.Material.Light.TextView">
        <item name="android:cursorVisible">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">bottom|end</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>


    <style name="BkavPadButtonStyle" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/pad_button_background</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:onClick">onButtonClick</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/pad_button_text_color</item>
        <!-- Attributes from androidx.appcompat.gridlayout -->
        <item name="layout_gravity">fill</item>
        <item name="layout_rowWeight">1</item>
        <item name="layout_columnWeight">1</item>
    </style>

    <style name="BkavDisplayTextStyle.Formula">
        <item name="android:paddingTop">@dimen/bkav_formula_padding_top</item>
        <item name="android:paddingBottom">@dimen/bkav_formula_padding_bottom</item>
        <item name="android:paddingStart">@dimen/bkav_formula_padding_start</item>
        <item name="android:paddingEnd">@dimen/bkav_formula_padding_end</item>
        <item name="android:gravity">bottom</item>
        <item name="minTextSize">@dimen/bkav_formula_min_textsize</item>
        <item name="maxTextSize">@dimen/bkav_formula_max_textsize</item>
        <item name="stepTextSize">1dp</item>
    </style>

    <style name="BkavDisplayTextStyle.Result">
        <item name="android:layout_marginTop">@dimen/bkav_result_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/bkav_result_margin_bottom</item>
        <item name="android:paddingTop">@dimen/bkav_result_padding_top</item>
        <item name="android:paddingBottom">@dimen/bkav_result_padding_bottom</item>
        <item name="android:paddingStart">@dimen/bkav_result_padding_start</item>
        <item name="android:paddingEnd">@dimen/bkav_result_padding_end</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">@dimen/bkav_result_textsize</item>
    </style>

    <style name="BkavHistoryItemTextStyle" parent="BkavDisplayTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="layout_gravity">center_vertical|right</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="BkavHistoryItemTextStyle.FomularStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BkavHistoryItemTextStyle.ResultStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="BkavButtonHistoryStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/bkav_bt_history_padding_top</item>
        <item name="android:paddingBottom">@dimen/bkav_bt_history_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/bkav_bt_history_padding_left</item>
        <item name="android:layout_marginBottom">@dimen/bkav_bt_history_margin_bottom</item>
    </style>

    <style name="BkavButtonMoreAdvanceStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:paddingTop">@dimen/bkav_bt_more_padding_top</item>
        <item name="android:paddingBottom">@dimen/bkav_bt_more_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/bkav_bt_more_padding_left</item>
        <item name="android:paddingRight">@dimen/bkav_bt_more_padding_right</item>
        <item name="android:layout_marginBottom">@dimen/bkav_bt_more_margin_bottom</item>
    </style>

    <style name="BkavPadLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BkavPadLayoutStyle.Numeric">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">11.7</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">20dip</item>
    </style>

    <style name="BkavPadButtonStyle.Numeric">
        <item name="android:fontFamily">@font/helveticaneuethin</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/pad_button_advanced_background</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="BkavPadButtonStyle.Operator">
        <item name="android:textSize">27sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BkavPadButtonStyle.Operator.Equal">
        <item name="android:padding">20.5dp</item>
    </style>

    <style name="BkavPadButtonStyle.Operator.Text">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="BkavPadLayoutStyle.Operator">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">3</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">24dip</item>
        <item name="android:paddingStart">0dip</item>
        <item name="android:paddingEnd">28dip</item>
    </style>

    <style name="BkavPadLayoutStyle.Advanced">
            <item name="android:elevation">4dip</item>
            <item name="android:paddingTop">0dip</item>
            <item name="android:paddingBottom">0dip</item>
            <item name="android:paddingStart">0dip</item>
            <item name="android:paddingEnd">0dip</item>
    </style>

    <style name="BkavPadButtonStyle.Advanced">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bkav_color_text_advance</item>
    </style>

    <style name="BkavPadButtonStyle.Advanced.Text">
        <item name="android:textAllCaps">true</item>
    </style>
</resources>