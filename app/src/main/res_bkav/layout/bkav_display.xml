<!--Bkav Phongngb man hinh display  khi xoay ngang -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/display"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <!-- android:elevation="4dip" : Cai nay de do bong' 4dp -->

    <com.android.calculator2.bkav.BkavCalculatorEditText
        android:id="@+id/formula"
        style="@style/DisplayEditTextStyle.Formula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="true"
        android:enabled="true"
        android:inputType="text|textNoSuggestions"
        android:textColor="@color/display_formula_text_color" />

    <com.android.calculator2.CalculatorEditText
        android:id="@+id/result"
        style="@style/DisplayEditTextStyle.Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/formula"
        android:focusable="false"
        android:inputType="none"
        android:textColor="@color/display_result_text_color" />

    <Button
        android:id="@+id/digit_history"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/result"
        android:layout_centerVertical="true"
        android:background="@null"
        android:onClick="onButtonClick"
        android:text="@string/button_history"
        android:textAllCaps="false"
        android:textColor="@color/colorFontHistory"
        android:textSize="17dp"
        android:textStyle="normal" />

</RelativeLayout>