<com.android.calculator2.bkav.BkavHistoryLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHistory"
    android:elevation="4dp">

    <ListView
        android:id="@+id/listview_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:stackFromBottom="true"></ListView>

    <Button
        android:id="@+id/clear_history"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingTop="20dp"
        android:text="@string/clear_history"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/emptyElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/textview_no_history"
        android:maxLines="1"
        android:textColor="@color/colorWhite"
        android:textSize="19.0sp"
        android:visibility="gone" />


</com.android.calculator2.bkav.BkavHistoryLayout>