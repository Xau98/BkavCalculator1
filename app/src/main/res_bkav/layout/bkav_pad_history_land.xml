<?xml version="1.0" encoding="utf-8"?><!--Bkav Phongngb History khi xoay ngang -->
<com.android.calculator2.bkav.BkavHistoryLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHistory"
    android:elevation="4dp">

    <ListView
        android:id="@+id/listview_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:stackFromBottom="true">
    </ListView>

    <Button
        android:id="@+id/clear_history"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:text="@string/clear_history"
        android:fontFamily="sans-serif-thin"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/emptyElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/textview_no_history"
        android:maxLines="1"
        android:textColor="@color/colorWhite"
        android:textSize="19.0sp"
        android:visibility="gone" />

</com.android.calculator2.bkav.BkavHistoryLayout>